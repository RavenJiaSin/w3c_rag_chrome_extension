{
    "manifest_version": 3,
    "name": "W3C AI 助手",
    "version": "1.0",
    "description": "提取W3C標準內容，並使用Chat AI回答相關問題。",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.w3.org/TR/*",
        "https://generativelanguage.googleapis.com/",
        "https://127.0.0.1:5000/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "W3C AI 助手"
    },
    "content_scripts": [
        {
            "matches": ["https://www.w3.org/TR/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
      {
        "resources": [
            "sidebar.html",
            "sidebar.js",
            "marked.min.js",
            "purify.min.js"
        ],
        "matches": ["<all_urls>"]
      }
    ]
}